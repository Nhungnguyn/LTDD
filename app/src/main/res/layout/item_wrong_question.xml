<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_background">

    <!-- Thứ hạng -->
    <TextView
        android:id="@+id/tvRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <!-- Nội dung câu hỏi -->
    <TextView
        android:id="@+id/tvQuestionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi mẫu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

    <!-- Các lựa chọn -->
    <RadioGroup
        android:id="@+id/rgOptionsItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbOptionAItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Đáp án A"
            android:layout_marginVertical="4dp"/>

        <RadioButton
            android:id="@+id/rbOptionBItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Đáp án B"
            android:layout_marginVertical="4dp"/>

        <RadioButton
            android:id="@+id/rbOptionCItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Đáp án C"
            android:layout_marginVertical="4dp"/>

        <RadioButton
            android:id="@+id/rbOptionDItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. Đáp án D"
            android:layout_marginVertical="4dp"/>
    </RadioGroup>

</LinearLayout>